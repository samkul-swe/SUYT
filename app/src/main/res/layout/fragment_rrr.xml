<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Item Image Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/item_image_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_image_placeholder"
                        android:contentDescription="Recyclable item image" />

                    <TextView
                        android:id="@+id/item_name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scan an item"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Progress Bar (initially hidden) -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/item_image_card"
                app:layout_constraintBottom_toBottomOf="@id/item_image_card"
                app:layout_constraintStart_toStartOf="@id/item_image_card"
                app:layout_constraintEnd_toEndOf="@id/item_image_card" />

            <!-- RRR Selection Buttons -->
            <LinearLayout
                android:id="@+id/buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/item_image_card">

                <Button
                    android:id="@+id/recycle_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/category_recycle"
                    android:textColor="@android:color/black"
                    android:background="@drawable/button_normal"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/reuse_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/category_reuse"
                    android:textColor="@android:color/black"
                    android:background="@drawable/button_normal"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/reduce_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/category_reduce"
                    android:textColor="@android:color/black"
                    android:background="@drawable/button_normal"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Info Content Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/info_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/buttons_container"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/info_content_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="@android:color/white"
                    android:text="Take a photo or select an image from Downloads to see recycling, reusing, and reducing options."
                    android:lineSpacingExtra="4dp" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- FABs for camera and downloads -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/camera_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="Take photo"
        app:fabSize="normal"
        app:backgroundTint="@color/colorPrimary" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/gallery_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_save"
        android:contentDescription="Select from Downloads"
        app:fabSize="normal"
        app:backgroundTint="@color/colorAccent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>