<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivFlower"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginBottom="-50dp"
            android:src="@drawable/flower_lily_of_the_valley"
            app:layout_constraintBottom_toTopOf="@id/ivFlowerPot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivFlowerPot"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/flower_pot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAchievementName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="First Recycle"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivFlowerPot" />

        <ImageView
            android:id="@+id/ivLockOverlay"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_lock"
            app:layout_constraintBottom_toBottomOf="@id/ivFlower"
            app:layout_constraintEnd_toEndOf="@id/ivFlower"
            app:layout_constraintStart_toStartOf="@id/ivFlower"
            app:layout_constraintTop_toTopOf="@id/ivFlower" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>