<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/app_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Profile Header Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profile_header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Profile Image -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image_view"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/placeholder_profile"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorPrimary"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Username and Rank -->
                <TextView
                    android:id="@+id/username_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EcoWarrior42"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/rank_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rank: Eco Warrior"
                    android:textColor="@color/colorAccent"
                    android:textStyle="italic"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp" />

                <!-- Email -->
                <TextView
                    android:id="@+id/email_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="eco.warrior@example.com"
                    android:textStyle="normal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Profile Actions Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profile_actions_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/profile_header_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Management"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <!-- Change Email Button -->
                <Button
                    android:id="@+id/change_email_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Email Address"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#E0E0E0"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="8dp"
                    android:gravity="start|center_vertical"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <!-- Change Password Button -->
                <Button
                    android:id="@+id/change_password_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#E0E0E0"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="8dp"
                    android:gravity="start|center_vertical"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <!-- Saved Posts Button -->
                <Button
                    android:id="@+id/saved_posts_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Saved Posts"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#E0E0E0"
                    android:drawableStart="@drawable/ic_bookmark"
                    android:drawablePadding="8dp"
                    android:gravity="start|center_vertical"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <!-- Create Post Button -->
                <Button
                    android:id="@+id/create_post_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create New Post"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableStart="@drawable/ic_add_post"
                    android:drawablePadding="8dp"
                    android:drawableTint="@android:color/white"
                    android:gravity="start|center_vertical"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Logout"
            android:textColor="@android:color/white"
            android:backgroundTint="#F44336"
            android:drawableStart="@drawable/ic_logout"
            android:drawableTint="@android:color/white"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/profile_actions_card" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>